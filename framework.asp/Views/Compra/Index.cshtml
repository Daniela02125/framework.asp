@model IEnumerable<framework.asp.Models.compra>

@{
    ViewBag.Title = "Compra - Lista";
}

<h2>Lista Compra</h2>

<p>
    @Html.ActionLink("Crear compra", "Create")
</p>
<table class="table table-bordered table-hover">
    <tr>
        <th>
            Fecha Compra
        </th>
        <th>
            Total Compra
        </th>
        <th>
            Usuario
        </th>
        <th>
            Cliente
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.fecha)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.total)
            </td>
            <td>
                @framework.asp.Controllers.CompraController.NombreUsuario(item.id_usuario)
            </td>
            <td>
                @framework.asp.Controllers.CompraController.NombreCliente(item.id_cliente)
            </td>
            <td>
                @Html.ActionLink("Editar", "Edit", new { id = item.id }) |
                @Html.ActionLink("Detalles", "Details", new { id = item.id }) |
                @Html.ActionLink("Eliminar", "Delete", new { id = item.id }, new { @class = "linkDelete" })
            </td>
        </tr>
    }

</table>

@section scripts{
    <script>
        $(".linkDelete").click(function (event) {
            if (!confirm('¿Esta seguro de eliminar?')) {
                event.preventDefault();
            }
        })
    </script>
}