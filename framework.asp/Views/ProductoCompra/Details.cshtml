@model framework.asp.Models.producto_compra

@{
    ViewBag.Title = "Details";
}

<h2>Detalles Compra</h2>

<div>
    
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Compra
        </dt>

        <dd>
            @Html.DisplayFor(model => model.id_compra)
        </dd>

        <dt>
           Producto
        </dt>

        <dd>
            @framework.asp.Controllers.ProductoCompraController.Producto(Model.id_producto)
        </dd>

