@model IEnumerable<framework.asp.Models.usuario>

@{
    ViewBag.Title = "Index";
}

<h2>Lista Usuario</h2>

<p>
    @Html.ActionLink("Crear Usuario", "Create")
</p>

    <table class="table table-bordered table-hover">
        <tr>
            <th>
                Nombre
            </th>
            <th>
                Apellido
            </th>
            <th>
                Fecha Nacimiento
            </th>
            <th>
                Correo Electronico
            </th>
            <th>

            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.nombre)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.apellido)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.fecha_nacimiento)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.email)
                </td>
                <td>
                </td>
                <td>
                    @Html.ActionLink("Editar", "Edit", new { id = item.id }) |
                    @Html.ActionLink("Detalles", "Details", new { id = item.id }) |
                    @Html.ActionLink("Eliminar", "Delete", new { id = item.id }, new { @class = "linkDelete" })
                </td>
            </tr>
        }

    </table>

    @section scripts{
        <script>
            $(".linkDelete").click(function (event) {
                if (!confirm('¿Esta seguro de eliminar?')) {
                    event.preventDefault();
                }
            })
        </script>
    }
